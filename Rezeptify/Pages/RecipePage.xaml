<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Rezeptify"
             xmlns:vm="clr-namespace:Rezeptify.VM;assembly=Rezeptify.VM"
             x:Class="Rezeptify.RecipePage"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             Title="RecipePage">
    <ContentPage.Resources>
        <local:ShowMengeConverter x:Key="MengeCon"/>
    </ContentPage.Resources>

    <Grid Style="{StaticResource GridBackground}">
        <Button Text="Lebensmittel" Command="{Binding CMD_StartPage}" FontSize="{StaticResource FontMedium}" Grid.Row="0"  Grid.Column="0" BackgroundColor="#454545" BorderColor="Black" BorderWidth="2.5"/>
        <Button Text="Rezepte" FontSize="{StaticResource FontMedium}" Grid.Row="0" Grid.Column="1" BackgroundColor="#696969"/>
        <Border Grid.Row="1" Grid.ColumnSpan="2" Margin="20" Stroke="Black" StrokeThickness="3">
            <CollectionView BackgroundColor="#dedede" ItemsSource="{Binding IngredientsCollection}" SelectionMode="Multiple">
                <CollectionView.Header>
                    <Grid ColumnDefinitions="2*,*">
                        <Label FontSize="{StaticResource FontMedium}" Text="Bezeichnung" Grid.Column="0" VerticalOptions="Center" HorizontalOptions="Center" Margin="0,15"/>
                        <Label FontSize="{StaticResource FontMedium}" Text="Menge" Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Center"/>
                    </Grid>
                </CollectionView.Header>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="2*, *">
                            <Label FontSize="{StaticResource FontSmall}" Text="{Binding Name}" Grid.Column="0" Margin="20, 0, 20, 10" LineBreakMode="TailTruncation" VerticalOptions="Center"/>
                            <Label FontSize="{StaticResource FontSmall}" Text="{Binding .,Converter={StaticResource MengeCon}}" Grid.Column="1" HorizontalOptions="End"  VerticalOptions="Center" Margin="20, 0, 20, 10"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Border>
        <Button Style="{StaticResource ButtonSubmitMain}" FontSize="{StaticResource FontLarge}" Text="Rezept erstellen" Grid.Row="2" Grid.ColumnSpan="2" Command="{Binding CMD_Result}"/>
    </Grid>

</ContentPage>