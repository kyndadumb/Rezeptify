            <Button Text="ZurÃ¼ck" Grid.Column="0"/>
            <Button Text="&#xE754;" Grid.Column="1" FontFamily="Symbols"/>
            <Button Text="{Binding BarcodeTest}" Command="{Binding CMD_ToggleFlashlight}" Grid.Column="2"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>